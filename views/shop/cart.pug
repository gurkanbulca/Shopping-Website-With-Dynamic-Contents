extends ../layouts/main-layout.pug


block content
    if(action !=="undefined" && action === "delete")
        div.alert.alert-danger The product has been deleted.
    
    if(action !=="undefined" && action === "edit")
        div.alert.alert-warning The product has been updated.
    
    if(action !== "undefined" && action ==="add")
        div.alert.alert-success The product has been added.

    
    if products.length > 0
        table.table.table-bordered
            thead
                tr
                th(style="width:100px;") Image
                th Product Name
                th(style="width:150px;") Price
                th(style="width:100px;") Quantity
                th(style="width:133px;") 
            tbody
                each product in products
                    tr
                        td
                            img(src=`/img/${product.imageUrl}` width='80px')
                        td #{product.name}
                        td #{product.price} TL
                        td #{product.cartItem.quantity}
                        td 
                            form(action="/delete-cartitem" method="POST")
                                input(type="hidden" name="productid" value=`${product.id}`)
                                button(type="submit").btn.btn-danger.btn-sm Delete
            
            tfoot
                td(colspan="3")
                    - var total = 0;
                    each product in products
                        - total +=(product.price * product.cartItem.quantity)

                td(style="font-weight:bold;") Toplam:
                td  #{total} tl
        .text-center
            a(href='/').btn.btn-primary Alışverişe Devam Et
            a(href='/checkout').btn.btn-primary.ml-2 Alışverişe Tamamla
    else
        h1 No Products